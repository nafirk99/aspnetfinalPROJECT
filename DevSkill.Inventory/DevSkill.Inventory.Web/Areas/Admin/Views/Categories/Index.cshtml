@model IEnumerable<DevSkill.Inventory.Domain.Entities.Category>

@{
    ViewData["Title"] = "Category List";
}

<h2>Categories</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger" onclick="return confirm('Are you Sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Category</a>
