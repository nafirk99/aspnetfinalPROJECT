@model DevSkill.Inventory.Domain.Entities.PackageViewModel

<div class="container mt-4">
    <h2>Create New Package</h2>

    <form asp-action="Create" method="post">
        <!-- Package Number Input -->
        <div class="form-group">
            <label asp-for="PackageNumber" class="control-label"></label>
            <input asp-for="PackageNumber" class="form-control" placeholder="Enter Package Number" />
            <span asp-validation-for="PackageNumber" class="text-danger"></span>
        </div>

        <!-- Assets Selection -->
        <h4>Select Assets</h4>
        <table class="table table-striped table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col" style="width: 1%;">Select</th>
                    <th scope="col">Asset Name</th>
                    <th scope="col">Brand</th>
                    <th scope="col">Price</th>
                    <th scope="col">Package ID</th> <!-- New column for Package ID -->
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Assets.Count; i++)
                {
                    <tr>
                        <td>
                            <input type="hidden" asp-for="Assets[i].AssetId" />
                            <input type="hidden" asp-for="Assets[i].AssetName" />
                            <input type="hidden" asp-for="Assets[i].Brand" />
                            <input type="hidden" asp-for="Assets[i].Price" />
                            <input type="checkbox" asp-for="Assets[i].IsSelected" class="form-check-input" id="asset_@i" />
                        </td>
                        <td>@Model.Assets[i].AssetName</td>
                        <td>@Model.Assets[i].Brand</td>
                        <td>@Model.Assets[i].Price.ToString("C")</td>
                        @* <td>@Model.Assets[i].PackageId</td> <!-- Display the PackageId, or indicate if it's not assigned --> *@
                        
                            @if (Model.Assets[i].PackageId == null)
                            {
                            <td style="color: green">Not assigned</td>
                            }
                            else
                            {
                            <td style="color: red">@Model.Assets[i].PackageId</td>
                            }
                    </tr>
                }
            </tbody>
        </table>

        <!-- Submit Button -->
        <div class="form-group">
            <button type="submit" class="btn btn-primary mt-3">Create Package</button>
        </div>
    </form>
</div>
