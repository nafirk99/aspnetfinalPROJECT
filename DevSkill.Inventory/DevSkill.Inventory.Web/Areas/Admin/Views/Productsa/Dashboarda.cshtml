@{
    ViewData["Title"] = "Dashboard";
}

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Page header -->
        <div class="content-header">
            <h1>Dashboard <small>Inventory Overview</small></h1>
        </div>

        <!-- Widgets Row -->
        <div class="row">
            <!-- Total Products Widget -->
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="small-box bg-aqua">
                    <div class="inner">
                        <h3>150</h3> <!-- Total Products Count -->
                        <p>Total Products</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-bag"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <!-- Total Categories Widget -->
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="small-box bg-green">
                    <div class="inner">
                        <h3>53</h3> <!-- Total Categories Count -->
                        <p>Total Categories</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-stats-bars"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <!-- Total Orders Widget -->
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="small-box bg-yellow">
                    <div class="inner">
                        <h3>44</h3> <!-- Total Orders Count -->
                        <p>Total Orders</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-person-add"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>

            <!-- Total Revenue Widget -->
            <div class="col-lg-3 col-md-6 col-sm-6">
                <div class="small-box bg-red">
                    <div class="inner">
                        <h3>$65K</h3> <!-- Total Revenue -->
                        <p>Total Revenue</p>
                    </div>
                    <div class="icon">
                        <i class="ion ion-pie-graph"></i>
                    </div>
                    <a href="#" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            </div>
        </div>

        <!-- Row for charts or more details -->
        <div class="row">
            <div class="col-lg-6">
                <!-- Placeholder for a chart or summary section -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Sales Overview</h3>
                    </div>
                    <div class="box-body">
                        <p>This section can contain a sales chart or overview of recent activity.</p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <!-- Placeholder for another section -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Recent Activity</h3>
                    </div>
                    <div class="box-body">
                        <p>Recent orders or product additions can be shown here.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
