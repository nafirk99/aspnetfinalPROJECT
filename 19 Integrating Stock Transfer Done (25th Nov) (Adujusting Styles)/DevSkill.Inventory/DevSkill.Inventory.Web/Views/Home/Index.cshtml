@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <!-- Welcome Section -->
    <section class="text-center mb-5">
        <h1 class="display-4 fw-bold">Welcome to EZO Inventory</h1>
        <p class="lead text-secondary">Efficiently manage and track your assets with our reliable inventory software.</p>
        <a href="@Url.Action("Dashboarda", "Productsa", new { area = "Admin" })" class="btn btn-primary btn-lg mt-3">Get Started</a>
    </section>

    <!-- Features Section -->
    <section class="mb-5">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="p-4 shadow rounded">
                    <i class="bi bi-box-seam display-4 text-primary"></i>
                    <h3 class="mt-3">Asset Management</h3>
                    <p>Track, manage, and organize your assets efficiently from one platform.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 shadow rounded">
                    <i class="bi bi-bar-chart-fill display-4 text-success"></i>
                    <h3 class="mt-3">Detailed Analytics</h3>
                    <p>Access detailed reports and analytics to make data-driven decisions.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 shadow rounded">
                    <i class="bi bi-lock-fill display-4 text-danger"></i>
                    <h3 class="mt-3">Secure Access</h3>
                    <p>Ensure data security with secure logins and role-based access control.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section class="text-center mb-5">
        <h2 class="mb-4">Why Choose EZO Inventory?</h2>
        <p class="text-secondary">Designed to simplify asset management, EZO Inventory is the perfect solution for businesses of all sizes. Manage everything in one place with our easy-to-use, secure, and highly customizable platform.</p>
    </section>

    <!-- CTA Section -->
    <section class="text-center py-5 bg-light rounded">
        <h2 class="mb-3">Ready to Get Started?</h2>
        <p class="lead text-secondary">Join thousands of businesses worldwide using EZO Inventory for efficient asset tracking.</p>
        <a href="@Url.Action("Index", "Productsa", new { area = "Admin" })" class="btn btn-success btn-lg">View Products</a>
        <a href="@Url.Action("Index", "Categories", new { area = "Admin" })" class="btn btn-outline-secondary btn-lg ms-3">Browse Categories</a>
    </section>
</div>
