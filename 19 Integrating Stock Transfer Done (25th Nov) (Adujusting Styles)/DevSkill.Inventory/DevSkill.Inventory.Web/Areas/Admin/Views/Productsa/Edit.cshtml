@model DevSkill.Inventory.Domain.Entities.ProductDTO

@{
    ViewData["Title"] = "Edit Product";
    var categories = (List<DevSkill.Inventory.Domain.Entities.Category>)ViewBag.Categories;
    var vendors = (List<DevSkill.Inventory.Domain.Entities.Vendor>)ViewBag.Vendors;
    var groups = (List<DevSkill.Inventory.Domain.Entities.Group>)ViewBag.Groups;
    var locations = (List<DevSkill.Inventory.Domain.Entities.Location>)ViewBag.Locations;
}

<div class="container py-5">
    

    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8 shadow rounded p-5" style="background-color: #f8f9fa;">
            <h2 class="text-center text-primary mb-4"><strong>Edit Product</strong></h2>

            <form method="post" enctype="multipart/form-data">
                <!-- Name -->
                <div class="mb-4">
                    <label for="Name" class="form-label">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter product name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <!-- Brand -->
                <div class="mb-4">
                    <label for="Brand" class="form-label">Brand</label>
                    <input type="text" class="form-control" asp-for="Brand" placeholder="Enter product brand" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <!-- Test************************************************************************* -->
                <div class="row mb-4">
                    <!-- Location Dropdown -->
                    <div class="col-md-3">
                        <label for="LocationId" class="form-label">Location</label>
                        <select class="form-select" asp-for="LocationId">
                            @foreach (var location in locations)
                            {
                                if (location.Id == Model.LocationId)
                                {
                                    <option value="@location.Id" selected>@location.Name</option>
                                }
                                else
                                {
                                    <option value="@location.Id">@location.Name</option>
                                }
                            }
                        </select>
                    </div>

                        <!-- Category Dropdown -->
                    <div class="col-md-3">
                        <label for="CategoryId" class="form-label">Category</label>
                        <select class="form-select" asp-for="CategoryId">
                            @foreach (var category in categories)
                            {
                                if (category.Id == Model.CategoryId)
                                {
                                    <option value="@category.Id" selected>@category.Name</option>
                                }
                                else
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Vendor Dropdown -->
                    <div class="col-md-3">
                        <label for="VendorId" class="form-label">Vendor</label>
                        <select class="form-select" asp-for="VendorId">
                            @foreach (var vendor in vendors)
                            {
                                if (vendor.Id == Model.VendorId)
                                {
                                    <option value="@vendor.Id" selected>@vendor.Name</option>
                                }
                                else
                                {
                                    <option value="@vendor.Id">@vendor.Name</option>
                                }
                            }
                        </select>
                    </div>

                    <!-- Group Dropdown -->
                    <div class="col-md-3">
                        <label for="GroupId" class="form-label">Group</label>
                        <select class="form-select" asp-for="GroupId">
                            @foreach (var group in groups)
                            {
                                if (group.Id == Model.GroupId)
                                {
                                    <option value="@group.Id" selected>@group.Name</option>
                                }
                                else
                                {
                                    <option value="@group.Id">@group.Name</option>
                                }
                            }
                        </select>
                    </div>
                 </div>


                <!-- Test************************************************************************* -->


                <!-- Other Fields Price -->
                <div class="mb-4">
                    <label for="Price" class="form-label">Price</label>
                    <input type="text" class="form-control" asp-for="Price" placeholder="Enter price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <!-- Description -->
                <div class="mb-4">
                    <label for="Description" class="form-label">Description</label>
                    <textarea class="form-control" asp-for="Description" rows="3" placeholder="Enter description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>


                <!--AIN-->
                <div class="mb-4">
                    <label for="AIN" class="form-label">AIN</label>
                    <input type="text" class="form-control" asp-for="AIN" placeholder="Enter AIN" />
                     <span asp-validation-for="AIN" class="text-danger"></span>
                </div>

                <!--Created By-->
                <div class="mb-4">
                    <label for="CreatedBy" class="form-label">Created By</label>
                    <input type="text" class="form-control" asp-for="CreatedBy" placeholder="Created By" />
                    <span asp-validation-for="CreatedBy" class="text-danger"></span>
                </div>

                <!--Total Quantity-->
                <div class="mb-4">
                    <label for="TotalQuantity" class="form-label">Total Quantity</label>
                    <input type="number" class="form-control" asp-for="TotalQuantity" placeholder="Total Quantity" />
                    <span asp-validation-for="TotalQuantity" class="text-danger"></span>
                </div>

                <!--Model Number-->
                <div class="mb-4">
                    <label for="ModelNumber" class="form-label">Model Number</label>
                    <input type="text" class="form-control" asp-for="ModelNumber" />
                    <span asp-validation-for="ModelNumber" class="text-danger"></span>
                </div>

                <!--Available Quantity-->
                <div class="mb-4">
                    <label for="AvailableQuantity" class="form-label">Available Quantity</label>
                    <input type="number" class="form-control" asp-for="AvailableQuantity" />
                    <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                </div>

                <!--Stock Price-->
                <div class="mb-4">
                    <label for="StockPrice" class="form-label">Stock Price</label>
                    <input type="number" class="form-control" asp-for="StockPrice" />
                    <span asp-validation-for="StockPrice" class="text-danger"></span>
                </div>

                <!--Image Preview-->
                <div class="row mb-3">
                    <div class="offset-sm-4 col-sm-8">
                        <img src="/Products/@ViewData["ImageFileName"]" width="150" />
                    </div>
                </div>

                <!--Image Input-->
                <div class="mb-4">
                    <label for="ImageFile" class="form-label">Image</label>
                    <input type="file" class="form-control" asp-for="ImageFile" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>


                <!-- Created At -->
                <div class="mb-4">
                    <label for="CreatedAt" class="form-label">Created At</label>
                    <input type="text" class="form-control" readonly value="@ViewData["CreatedAt"]" />
                </div>

                @* <!-- Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-4">Save Changes</button>
                    <a class="btn btn-outline-secondary btn-lg px-4" asp-controller="Productsa" asp-action="Index" role="button">Back</a>
                </div> *@

                <!-- Buttons -->
                <div class="d-flex justify-content-between mt-4">
                    <!-- Save Changes Button with Icon -->
                    <button type="submit" class="btn btn-dark btn-lg px-4">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                    <!-- Back Button with Icon -->
                    <a class="btn btn-outline-dark btn-lg px-4" asp-controller="Productsa" asp-action="Index" role="button">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Breadcrumb aligned to the right -->
<div class="d-flex justify-content-end mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-controller="Productsa" asp-action="Index">Products</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Edit Product: @Model.Name</li>
