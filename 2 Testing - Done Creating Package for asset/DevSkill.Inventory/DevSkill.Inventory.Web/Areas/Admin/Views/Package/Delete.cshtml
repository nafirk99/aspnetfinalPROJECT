 @model DevSkill.Inventory.Domain.Entities.Package

<div class="container mt-4">
    <h2>Delete Package</h2>

    <div class="alert alert-warning" role="alert">
        <h3>Are you sure you want to delete this package?</h3>
        <div>
            <p><strong>Package Number:</strong> @Model.PackageNumber</p>
            <p><strong>Created At:</strong> @Model.CreatedAt.ToString("f")</p>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

