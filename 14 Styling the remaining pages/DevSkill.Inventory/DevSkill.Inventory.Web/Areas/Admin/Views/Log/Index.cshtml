@{
    ViewData["Title"] = "Log Files";
}

<div class="row">
    <div class="col-md-12">
        <div class="p-4">
            <!-- Flexbox row for title and any potential actions -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2><b>Application Logs</b></h2>
            </div>

            <!-- Log Content Card -->
            <div class="card">
                <div class="card-body">
                    <pre style="white-space: pre-wrap; font-family: monospace; overflow-x: auto; background-color: #f8f9fa; padding: 1rem;">
                        @ViewBag.LogContent
                    </pre>
                </div>
            </div>
        </div>
    </div>
</div>
