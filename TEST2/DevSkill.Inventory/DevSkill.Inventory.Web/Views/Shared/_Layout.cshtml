<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EZO </title>

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/ez favicon-32x32.png" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DevSkill.Inventory.Web.styles.css" asp-append-version="true" />

    <!-- Custom Styling for Landing Page -->
    <style>
        /* Navbar Styles */
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: bold;
            color: #4a90e2;
        }

        .navbar-nav .nav-link {
            font-size: 1.1rem;
            color: #333;
        }

            .navbar-nav .nav-link:hover {
                color: #4a90e2;
            }

        /* Header background */
        .header-bg {
            background: linear-gradient(120deg, #4a90e2, #283e6a);
            padding: 50px 0;
            color: #fff;
            text-align: center;
        }

            .header-bg h1 {
                font-size: 2.5rem;
                font-weight: bold;
            }

            .header-bg p {
                font-size: 1.2rem;
                margin-top: 10px;
            }

        /* Footer Styles */
        .footer {
            background: #333;
            color: #fff;
            padding: 20px 0;
        }

            .footer a {
                color: #4a90e2;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        /* Main content styling */
        .main-content {
            padding: 60px 0;
        }
    </style>
</head>
<body>

    <!-- Header with Hero Section -->
    <header class="header-bg">
        <div class="container text-center">
            <h1>Welcome to EZO Inventory</h1>
            <p>Manage your assets with ease and efficiency.</p>
        </div>
    </header>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm sticky-top">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">EZO | Inventory</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Productsa" asp-action="Dashboarda">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Categories" asp-action="Index">Categories</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Productsa" asp-action="Index">Productsa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">TTT</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Product" asp-action="Index">BA</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="footer text-center">
        <div class="container">
            <p>&copy; 2024 EZOfficeInventory. All rights reserved - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></p>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
