@model DevSkill.Inventory.Domain.Entities.ConfirmationViewModel

<h2>Purchase Confirmation</h2>

<p>Your purchase was successful! Here are the details:</p>

<table class="table">
    <thead>
        <tr>
            <th>Package Number</th>
            <th>Total Assets</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var package in Model.Packages)
        {
            <tr>
                <td>@package.PackageNumber</td>
                <td>@package.Productas.Count</td> <!-- Number of assets in the package -->
                <td>$@package.Productas.Sum(p => p.Price)</td>
            </tr>
        }
    </tbody>
</table>

<h4>Total Amount Paid: $@Model.TotalAmount</h4>

<a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Homepage</a>
