@model DevSkill.Inventory.Domain.Entities.ItemDTO

@{
    ViewData["Title"] = "Create Item";
    var categories = ViewBag.Categories as List<DevSkill.Inventory.Domain.Entities.Category>;
    // var vendors = ViewBag.Vendors as List<DevSkill.Inventory.Domain.Entities.Vendor>;
    // var groups = ViewBag.Groups as List<DevSkill.Inventory.Domain.Entities.Group>;
    // var locations = ViewBag.Locations as List<DevSkill.Inventory.Domain.Entities.Location>;
}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5"><b>Create Item</b></h2>

        <form asp-action="Create" enctype="multipart/form-data" method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Brand</label>
                <div class="col-sm-8">
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <!--Image File-->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input asp-for="ImageFile" type="file" class="form-control" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <!--Category Dropdown-->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select asp-for="CategoryId" class="form-select">
                        <option value="">Select a Category</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>

            <!--SKU-->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">SKU</label>
                <div class="col-sm-8">
                    <textarea asp-for="SKU" class="form-control"></textarea>
                    <span asp-validation-for="SKU" class="text-danger"></span>
                </div>
            </div>

            <!--Created By-->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Created By</label>
                <div class="col-sm-8">
                    <textarea asp-for="CreatedBy" class="form-control"></textarea>
                    <span asp-validation-for="CreatedBy" class="text-danger"></span>
                </div>
            </div>

            <!--Total Quantity-->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Total Quantity</label>
                <div class="col-sm-8">
                    <textarea asp-for="TotalQuantity" class="form-control"></textarea>
                    <span asp-validation-for="TotalQuantity" class="text-danger"></span>
                </div>
            </div>

            <!--Model Number-->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Model Number</label>
                <div class="col-sm-8">
                    <textarea asp-for="ModelNumber" class="form-control"></textarea>
                    <span asp-validation-for="ModelNumber" class="text-danger"></span>
                </div>
            </div>

            <!--Available Quantity-->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Available Quantity</label>
                <div class="col-sm-8">
                    <textarea asp-for="AvailableQuantity" class="form-control"></textarea>
                    <span asp-validation-for="AvailableQuantity" class="text-danger"></span>
                </div>
            </div>

            <!--Stock Price-->
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Stock Price</label>
                <div class="col-sm-8">
                    <textarea asp-for="StockPrice" class="form-control"></textarea>
                    <span asp-validation-for="StockPrice" class="text-danger"></span>
                </div>
            </div>



            <div class="row">
                <div class="offset-sm-4 col-sm-8 d-grid">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
