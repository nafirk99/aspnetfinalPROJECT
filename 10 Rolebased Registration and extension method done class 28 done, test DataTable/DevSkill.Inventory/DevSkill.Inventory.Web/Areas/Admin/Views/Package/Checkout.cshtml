@model DevSkill.Inventory.Domain.Entities.CheckoutViewModel

<h2>Confirm Your Purchase</h2>

<form asp-action="ConfirmCheckout" method="post">
    <input type="hidden" asp-for="SelectedPackageIds" />
    <table class="table">
        <thead>
            <tr>
                <th>Package Number</th>
                <th>Total Assets</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var package in Model.Packages)
            {
                <tr>
                    <td>@package.PackageNumber</td>
                    <td>@package.Productas.Count</td> <!-- Total number of assets in this package -->
                    <td>$@package.Productas.Sum(p => p.Price)</td>
                </tr>
            }
        </tbody>
    </table>
    <h4>Total Amount: $@Model.TotalAmount</h4>
    <button type="submit" class="btn btn-success">Confirm Purchase</button>
</form>
