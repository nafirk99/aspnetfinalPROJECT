@{
    ViewData["Title"] = "Log Files";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"><b>Log Files</b></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Log Files</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-dark text-white">
                <h3 class="card-title"><i class="fas fa-file-alt"></i> Application Logs</h3>
                <div class="card-tools">
                    <button class="btn btn-success btn-sm shadow-sm" onclick="window.history.back();">
                        <i class="fas fa-arrow-left"></i> Back
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="log-content">
                    <pre style="white-space: pre-wrap; font-family: monospace; overflow-x: auto; background-color: #f8f9fa; padding: 1rem; border-radius: 5px; border: 1px solid #dee2e6;">
                        @ViewBag.LogContent
                    </pre>
                </div>
            </div>
        </div>
    </div>
</div>
