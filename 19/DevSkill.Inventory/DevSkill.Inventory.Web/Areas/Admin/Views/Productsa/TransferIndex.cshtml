 @model List<DevSkill.Inventory.Domain.Entities.Producta>

@{
    ViewBag.Title = "Transfer Products";
    var locations = ViewBag.Locations as List<DevSkill.Inventory.Domain.Entities.Location>;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark"><b>Transfer Products</b></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Transfer Products</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-dark text-white">
                <h3 class="card-title"><i class="fas fa-exchange-alt"></i> Manage Product Transfers</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-primary">
                            <tr>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Current Location</th>
                                <th>Total Quantity</th>
                                <th>Available Quantity</th>
                                <th>Transfer To</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <form asp-action="Transfer" asp-controller="Productsa" method="post">
                                    <td>
                                        <strong>@product.Name</strong>
                                    </td>
                                    <td>
                                        <span class="badge badge-info">@product.Category?.Name</span>
                                    </td>
                                    <td>
                                        <span class="badge badge-secondary">@product.Location?.Name</span>
                                    </td>
                                    <td>
                                        <span class="text-muted">@product.TotalQuantity</span>
                                    </td>
                                    <td>
                                        <span class="text-success">@product.AvailableQuantity</span>
                                    </td>
                                    <td>
                                        <input type="hidden" name="ProductId" value="@product.Id" />
                                        <select name="NewLocationId" class="form-control form-control-sm border-primary" required>
                                            <option value="" disabled selected>Select Location</option>
                                                @foreach (var location in locations)
                                                {
                                                <option value="@location.Id">@location.Name</option>
                                                }
                                        </select>
                                    </td>
                                    <td>
                                        <button type="submit" class="btn btn-dark shadow-sm">
                                            <i class="fas fa-arrow-right"></i> Transfer
                                        </button>
                                    </td>
                                    </form>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


