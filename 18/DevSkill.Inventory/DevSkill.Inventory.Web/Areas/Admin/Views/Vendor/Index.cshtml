@model IEnumerable<DevSkill.Inventory.Domain.Entities.Vendor>

@{
    ViewData["Title"] = "Vendor List";
}

<div class="row">
    <div class="col-md-9">
        <div class="p-4">
            <!-- Flexbox row for Vendors List and Search -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2><b>Vendors List</b></h2>
                <!-- Search form aligned to the right -->
                <form asp-action="Index" method="get" class="form-inline">
                    <div class="form-group mx-sm-3">
                        <input type="text" name="searchString" class="form-control" placeholder="Search Categories"
                               value="@ViewData["CurrentFilter"]" />
                    </div>
                    <button type="submit" class="btn btn-dark">Search</button>
                </form>
            </div>

            <!-- Vendors Table -->
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col" style="width: 1%;">Vendor ID</th>
                        <th scope="col" style="width: 20%;">Vendor Name</th>
                        <th scope="col" style="width: 1%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var vendor in Model)
                    {
                        <tr>
                            <td>@vendor.Id</td>
                            <td>@vendor.Name</td>
                            <td class="text-nowrap">
                                <a asp-action="Edit" asp-route-id="@vendor.Id" class="btn btn-dark btn-sm">Edit</a>
                                <a asp-action="Delete" asp-route-id="@vendor.Id" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Create new Vendor button -->
            <a asp-action="Create" class="btn btn-dark">Add New Vendor</a>
        </div>
    </div>
</div>
